<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE token  [
        <!ENTITY style SYSTEM "shared.css">
        <!ENTITY about.en SYSTEM "about.en.js">
        <!ENTITY approve.en SYSTEM "approve.en.js">
        <!ENTITY mint.en SYSTEM "mint.en.js">
        <!ENTITY deposit.en SYSTEM "deposit.en.js">
        <!ENTITY createProposal.en SYSTEM "createProposal.en.js">
        <!ENTITY vote.en SYSTEM "vote.en.js">
        ]>

<ts:token
    xmlns:ts="http://tokenscript.org/2020/06/tokenscript"
    xmlns:xhtml="http://www.w3.org/1999/xhtml"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:asnx="urn:ietf:params:xml:ns:asnx"
    xmlns:ethereum="urn:ethereum:constantinople" xsi:schemaLocation="http://tokenscript.org/2020/06/tokenscript http://tokenscript.org/2020/06/tokenscript.xsd" custodian="false">
    <asnx:module name="LeKgDAO-event-Sent">
        <namedType name="Sent">
            <type>
                <sequence>
                    <element name="from" ethereum:type="address" ethereum:indexed="false"></element>
                    <element name="to" ethereum:type="address" ethereum:indexed="false"></element>
                    <element name="amount" ethereum:type="uint256" ethereum:indexed="false"></element>
                </sequence>
            </type>
        </namedType>
    </asnx:module>
    <ts:label>
        <ts:string xml:lang="en">LeKgDAO</ts:string>
    </ts:label>
    <ts:contract interface="erc20" name="LeKgDAO">
        <ts:address network="43113">0x044dFeD01a3E219bEA06f795Afa3F01ea99837e2</ts:address>
        <!--mainnet-->
    </ts:contract>
    <ts:origins>
        <!-- Define the contract which holds the token that the user will use -->
        <ts:ethereum contract="LeKgDAO"/>
        <!-- as above ts:contract name -->
    </ts:origins>
    <ts:cards>
        <ts:card type="action">
            <ts:label>
                <ts:string xml:lang="en">About</ts:string>
            </ts:label>
            <ts:view
                xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
                <style type="text/css">&style;</style>
                <script type="text/javascript">&about.en;</script>
            </ts:view>
        </ts:card>

        <ts:card type="action">
            <ts:label>
                <ts:string xml:lang="en">Mint</ts:string>
            </ts:label>

            <ts:attribute name="receiverAddress">
                <ts:type>
                    <ts:syntax>1.3.6.1.4.1.1466.115.121.1.15</ts:syntax>
                </ts:type>
                <ts:label>
                    <ts:string xml:lang="en">Receiver Address</ts:string>
                </ts:label>
                <ts:origins>
                    <ts:user-entry as="address"/>
                </ts:origins>
            </ts:attribute>

             <ts:attribute name="mintAmount">
            <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax></ts:type>
            <ts:label>
                <ts:string xml:lang="en">Amount to mint</ts:string>
            </ts:label>
            <ts:origins>
                <!-- e18 is a hard coded multiplier.
                rationale for hardcoding: avoiding over-design  -->
                <ts:user-entry as="e18"/>
            </ts:origins>
            </ts:attribute>
             
            <ts:transaction>
            <ethereum:transaction function="mint" contract="LeKgDAO" as="uint">
                    <!--<ethereum:to ref="receiverAddress"/>
                    <ethereum:value ref="mintAmount"/>-->
                <ts:data>
                    <ts:address ref="receiverAddress"/>
                    <ts:uint256 ref="mintAmount"/>
                </ts:data>
             </ethereum:transaction>
             </ts:transaction>

            <ts:view
                xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
                <style type="text/css">&style;</style>
                <script type="text/javascript">&mint.en;</script>
            </ts:view>
        </ts:card>

        <ts:card type="action">
            <ts:label>
                <ts:string xml:lang="en">Deposit</ts:string>
            </ts:label>

             <ts:attribute name="amountToDeposit">
            <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax></ts:type>
            <ts:label>
                <ts:string xml:lang="en">Amount to deposit</ts:string>
            </ts:label>
            <ts:origins>
                <!-- e18 is a hard coded multiplier.
                rationale for hardcoding: avoiding over-design  -->
                <ts:user-entry as="e18"/>
            </ts:origins>
            </ts:attribute>
             
            <ts:transaction>
            <ethereum:transaction function="deposit" contract="LeKgDAO" as="uint">
                <ts:data>
                    <ts:uint256 ref="amountToDeposit"/>
                </ts:data>
             </ethereum:transaction>
             </ts:transaction>

            <ts:view
                xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
                <style type="text/css">&style;</style>
                <script type="text/javascript">&deposit.en;</script>
            </ts:view>
        </ts:card>

        <ts:card type="action">
            <ts:label>
                <ts:string xml:lang="en">CreateProposal</ts:string>
            </ts:label>

             <ts:attribute name="proposalName">
            <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.15</ts:syntax></ts:type>
            <ts:label>
                <ts:string xml:lang="en">Proposal</ts:string>
            </ts:label>
            <ts:origins>
                <ts:user-entry as="utf8"/>
            </ts:origins>
            </ts:attribute>
             
            <ts:transaction>
            <ethereum:transaction function="createProposal" contract="LeKgDAO" as="utf8">
                <ts:data>
                    <ts:string ref="proposalName"/>
                </ts:data>
             </ethereum:transaction>
             </ts:transaction>

            <ts:view
                xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
                <style type="text/css">&style;</style>
                <script type="text/javascript">&createProposal.en;</script>
            </ts:view>
        </ts:card>

        <ts:card type="action">
            <ts:label>
                <ts:string xml:lang="en">Vote</ts:string>
            </ts:label>

            <ts:attribute name="proposalId">
                <ts:type>
                    <ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax>
                </ts:type>
                <ts:label>
                    <ts:string xml:lang="en">Proposal Id</ts:string>
                </ts:label>
                <ts:origins>
                    <ts:user-entry as="uint"/>
                </ts:origins>
            </ts:attribute>

             <ts:attribute name="vote">
            <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax></ts:type>
            <ts:label>
                <ts:string xml:lang="en">Vote</ts:string>
            </ts:label>
            <ts:origins>
                <ts:user-entry as="uint"/>
            </ts:origins>
            </ts:attribute>
             
            <ts:transaction>
            <ethereum:transaction function="vote" contract="LeKgDAO" as="uint">
                <ts:data>
                    <ts:uint256 ref="proposalId"/>
                    <ts:uint8 ref="vote"/>
                </ts:data>
             </ethereum:transaction>
             </ts:transaction>

            <ts:view
                xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
                <style type="text/css">&style;</style>
                <script type="text/javascript">&vote.en;</script>
            </ts:view>
        </ts:card>

        <ts:card type="action">
            <ts:label>
                <ts:string xml:lang="en">Approve</ts:string>
            </ts:label>
            <ts:attribute name="approvalAddress">
                <ts:type>
                    <ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax>
                </ts:type>
                <ts:label>
                    <ts:string xml:lang="en">Approval Address</ts:string>
                </ts:label>
                <ts:origins>
                    <ts:user-entry as="address"/>
                </ts:origins>
            </ts:attribute>
            <ts:transaction>
                <ethereum:transaction function="approve" contract="LeKgDAO" as="uint">
                    <ts:data>
                        <ts:address ref="approvalAddress"/>
                        <ts:uint256>115792089237316195423570985008687907853269984665640564039457584007913129639935</ts:uint256>
                    </ts:data>
                </ethereum:transaction>
            </ts:transaction>
            <ts:view
                xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
                <style type="text/css">&style;</style>
                <script type="text/javascript">&approve.en;</script>
            </ts:view>
        </ts:card>
    </ts:cards>
    <ts:attribute name="decimals">
        <ts:type>
            <ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax>
        </ts:type>
        <ts:label>
            <ts:string xml:lang="en">decimals</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="decimals" contract="LeKgDAO" as="uint"></ethereum:call>
        </ts:origins>
    </ts:attribute>
    <ts:attribute name="minter">
        <ts:type>
            <ts:syntax>1.3.6.1.4.1.1466.115.121.1.15</ts:syntax>
        </ts:type>
        <ts:label>
            <ts:string xml:lang="en">minter</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="minter" contract="LeKgDAO" as="address"></ethereum:call>
        </ts:origins>
    </ts:attribute>
    <ts:attribute name="name">
        <ts:type>
            <ts:syntax>1.3.6.1.4.1.1466.115.121.1.26</ts:syntax>
        </ts:type>
        <ts:label>
            <ts:string xml:lang="en">name</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="name" contract="LeKgDAO" as="utf8"></ethereum:call>
        </ts:origins>
    </ts:attribute>
    <ts:attribute name="nextProposalId">
        <ts:type>
            <ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax>
        </ts:type>
        <ts:label>
            <ts:string xml:lang="en">nextProposalId</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="nextProposalId" contract="LeKgDAO" as="uint"></ethereum:call>
        </ts:origins>
    </ts:attribute>
    <ts:attribute name="symbol">
        <ts:type>
            <ts:syntax>1.3.6.1.4.1.1466.115.121.1.26</ts:syntax>
        </ts:type>
        <ts:label>
            <ts:string xml:lang="en">symbol</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="symbol" contract="LeKgDAO" as="utf8"></ethereum:call>
        </ts:origins>
    </ts:attribute>
    <ts:attribute name="token">
        <ts:type>
            <ts:syntax>1.3.6.1.4.1.1466.115.121.1.15</ts:syntax>
        </ts:type>
        <ts:label>
            <ts:string xml:lang="en">token</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="token" contract="LeKgDAO" as="address"></ethereum:call>
        </ts:origins>
    </ts:attribute>
    <ts:attribute name="totalShares">
        <ts:type>
            <ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax>
        </ts:type>
        <ts:label>
            <ts:string xml:lang="en">totalShares</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="totalShares" contract="LeKgDAO" as="uint"></ethereum:call>
        </ts:origins>
    </ts:attribute>
</ts:token>